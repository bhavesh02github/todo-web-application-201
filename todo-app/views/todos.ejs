<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="./css/styles.css" rel="stylesheet">
    <script>
        var token = document
            .querySelector('meta[name="csrf-token"]')
            .getAttribute("content");
        function updateTodo(id, completed) {
            fetch(`/todos/${id}`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    _csrf: token,
                    completed: !completed
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => console.error(err));
        }
        function deleteTodo(id) {
            fetch(`/todos/${id}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => console.error(err));
        }
    </script>
    <title>Todo-List</title>
</head>

<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <div>
                <%= "Welcome! " + loggedInUser.firstName + " " + loggedInUser.lastName %>
            </div>
            <div class="gap-2 text-blue-600">
                <a href="/" style="color: blue;">Homepage |</a>
                <a href="/signup" style="color: blue;">Sign Up |</a>
                <a href="/login" style="color: blue;">Login</a>
            </div>
            <a href="/signout" style="color: green;">Signout</a>
                <form action="/todos" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="flex py-5 gap-2">
                        <div class="flex-auto">
                            <input class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm" type="text"
                                name="title" placeholder="Enter todo">
                        </div>
                        <div class="flex-auto">
                            <input class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm leading-4"
                                type="date" name="dueDate" >
                        </div>
                        <div class="flex-none">
                            <button class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2"
                                type="submit">Add</button>
                        </div>
                    </div>
                </form>

                <% if(messages && messages.error && messages.error.length > 0)  { %>
                    <% for(var i=0; i<messages.error.length; i++) { %>
                            <li> <%= messages.error[i] %></li>
                    <% } %>
                  <% } %>

                <%- include('todo.ejs',{ "todotype" : "Overdue" , "id" : "count-overdue" , "todos" : overdueTodos }) %>

                <%- include('todo.ejs',{ "todotype" : "Due Today" , "id" : "count-due-today" , "todos" : dueTodayTodos }) %>

                <%- include('todo.ejs',{ "todotype" : "Due Later" , "id" : "count-due-later" , "todos" : dueLaterTodos }) %>

                <%- include('todo.ejs',{ "todotype" : "Completed Items" , "id" : "count-completed-items", "todos" : CompletedTodos }) %>
        </div>        
    </div>

</body>

</html>
